<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="w-full max-w-md">
    <div class="bg-white shadow-lg rounded-lg p-8">
      <h1 class="text-2xl font-bold text-center text-gray-800 mb-4">Alterar Senha</h1>
      <p class="text-center text-gray-600 mb-6">Você precisa escolher uma nova senha antes de continuar.</p>

      <% if flash[:alert] %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <% if @user.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
          <ul class="list-disc pl-5">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @user, url: force_password_change_path, method: :patch, class: "space-y-6" do |f| %>
        <div>
          <label for="user_password" class="block text-sm font-medium text-gray-700 mb-1">Nova Senha</label>
          <%= f.password_field :password, id: "user_password", required: true,
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
              placeholder: "Número, maiúscula, minúscula e caractere especial" %>
        </div>

        <div>
          <label for="user_password_confirmation" class="block text-sm font-medium text-gray-700 mb-1">Confirmar Nova Senha</label>
          <%= f.password_field :password_confirmation, id: "user_password_confirmation", required: true,
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
              placeholder: "Confirme a nova senha" %>
        </div>

        <div>
          <button type="submit"
                  class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200 font-medium">
            Alterar Senha
          </button>
        </div>
      <% end %>

      <div class="mt-4 text-center">
        <%= button_to "Sair", logout_path, method: :delete, class: "text-red-600 hover:text-red-800 font-medium text-sm" %>
      </div>
    </div>
  </div>
</div>
