<div class="min-h-screen bg-gray-100">
  <nav class="bg-white shadow">
    <div class="max-w-4xl mx-auto px-4 py-4 flex justify-between items-center">
      <h1 class="text-xl font-bold text-gray-800">Painel do Usuário</h1>
      <div class="flex items-center gap-4">
        <span class="text-gray-600">Olá, <strong><%= current_user.username %></strong></span>
        <%= button_to "Sair", logout_path, method: :delete, class: "text-red-600 hover:text-red-800 font-medium" %>
      </div>
    </div>
  </nav>

  <div class="max-w-2xl mx-auto mt-10 px-4">
    <div class="bg-white shadow-lg rounded-lg p-8">
      <h2 class="text-2xl font-bold text-gray-800 mb-6">Editar Perfil</h2>

      <% if flash[:notice] %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <% if @user.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
          <ul class="list-disc pl-5">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @user, url: profile_path, method: :patch, class: "space-y-6" do |f| %>
        <div>
          <label for="user_username" class="block text-sm font-medium text-gray-700 mb-1">Usuário</label>
          <%= f.text_field :username, id: "user_username",
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <label for="user_password" class="block text-sm font-medium text-gray-700 mb-1">Nova Senha</label>
          <%= f.password_field :password, id: "user_password",
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
              placeholder: "Deixe em branco para manter a senha atual" %>
        </div>

        <div>
          <label for="user_password_confirmation" class="block text-sm font-medium text-gray-700 mb-1">Confirmar Nova Senha</label>
          <%= f.password_field :password_confirmation, id: "user_password_confirmation",
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
              placeholder: "Confirme a nova senha" %>
        </div>

        <div>
          <button type="submit"
                  class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200 font-medium">
            Salvar Alterações
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>
