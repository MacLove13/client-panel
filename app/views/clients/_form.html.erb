<%= form_with model: @client, class: "space-y-6" do |f| %>
  <div>
    <label for="client_name" class="block text-sm font-medium text-gray-700 mb-1">Nome</label>
    <%= f.text_field :name, id: "client_name",
        class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
        placeholder: "Digite o nome do cliente" %>
  </div>

  <div>
    <label for="client_nickname" class="block text-sm font-medium text-gray-700 mb-1">Apelido</label>
    <%= f.text_field :nickname, id: "client_nickname",
        class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
        placeholder: "Digite o apelido (opcional)" %>
  </div>

  <div>
    <label for="client_phone" class="block text-sm font-medium text-gray-700 mb-1">Celular</label>
    <%= f.text_field :phone, id: "client_phone",
        class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
        placeholder: "Digite o celular (opcional)" %>
  </div>

  <div>
    <label for="client_address" class="block text-sm font-medium text-gray-700 mb-1">Endereço</label>
    <%= f.text_field :address, id: "client_address",
        class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
        placeholder: "Digite o endereço (opcional)" %>
  </div>

  <div class="flex gap-4">
    <button type="submit"
            class="flex-1 bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200 font-medium">
      <%= @client.persisted? ? "Atualizar Cliente" : "Criar Cliente" %>
    </button>
    <%= link_to "Cancelar", clients_path, class: "flex-1 text-center bg-gray-300 text-gray-700 py-2 px-4 rounded-md hover:bg-gray-400 transition duration-200 font-medium" %>
  </div>
<% end %>
