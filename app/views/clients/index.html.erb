<div class="min-h-screen bg-gray-100">
  <%= render "shared/topbar" %>

  <div class="flex">
    <%= render "shared/sidebar" %>

    <main class="flex-1 p-6">
      <% if flash[:notice] %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <div class="bg-white shadow-lg rounded-lg p-8">
        <div class="flex justify-between items-center mb-6">
          <h2 class="text-2xl font-bold text-gray-800">Clientes</h2>
          <%= link_to "Novo Cliente", new_client_path, class: "bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition duration-200 font-medium" %>
        </div>

        <%= form_with url: clients_path, method: :get, class: "flex items-center gap-4 mb-6", data: { turbo_frame: "_top" } do %>
          <div class="flex-1">
            <%= text_field_tag :search, params[:search],
                placeholder: "Buscar por nome, celular, endereço ou apelido...",
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          <div>
            <%= select_tag :sort_direction, options_for_select([["Mais recentes", "desc"], ["Mais antigos", "asc"]], params[:sort_direction] || "desc"),
                class: "px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          <button type="submit" class="bg-gray-600 text-white py-2 px-4 rounded-md hover:bg-gray-700 transition duration-200 font-medium">
            Filtrar
          </button>
        <% end %>

        <% if @clients.any? %>
          <table class="w-full text-left">
            <thead>
              <tr class="border-b border-gray-200">
                <th class="py-3 px-4 text-sm font-medium text-gray-700">Nome</th>
                <th class="py-3 px-4 text-sm font-medium text-gray-700">Apelido</th>
                <th class="py-3 px-4 text-sm font-medium text-gray-700">Celular</th>
                <th class="py-3 px-4 text-sm font-medium text-gray-700">Endereço</th>
                <th class="py-3 px-4 text-sm font-medium text-gray-700">Ações</th>
              </tr>
            </thead>
            <tbody>
              <% @clients.each do |client| %>
                <tr class="border-b border-gray-100 hover:bg-gray-50">
                  <td class="py-3 px-4 text-gray-800"><%= client.name %></td>
                  <td class="py-3 px-4 text-gray-600"><%= client.nickname %></td>
                  <td class="py-3 px-4 text-gray-600"><%= client.phone %></td>
                  <td class="py-3 px-4 text-gray-600"><%= client.address %></td>
                  <td class="py-3 px-4">
                    <%= link_to "Editar", edit_client_path(client), class: "text-blue-600 hover:text-blue-800 font-medium" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <p class="text-gray-500 text-center py-8">Nenhum cliente encontrado.</p>
        <% end %>
      </div>
    </main>
  </div>
</div>
